<% if @user.errors.any? %>
  <%= turbo_stream.replace 'user_form', partial: 'users/form', locals: { user: @user } %>
<% else %>
  <%= turbo_stream.prepend 'users_list', partial: 'users/user', locals: { user: @user } %>
  <%= turbo_stream.replace 'user_form', partial: 'users/form', locals: { user: User.new } %>
  <%= turbo_stream.replace 'flash_messages', partial: 'layouts/flash_messages' %>
<% end %>

