<% if logs.any? %>
  <div class="activity-log">
    <ul class="list-group">
      <% logs.each do |log| %>
        <li class="list-group-item">
          <div class="d-flex align-items-center">
            <div class="activity-icon me-3">
              <i class="fas <%= log.icon_class %>"></i>
            </div>
            <div class="activity-details">
              <div class="activity-time small text-muted"><%= log.created_at.strftime("%b %d, %Y %H:%M") %></div>
              <div class="activity-description"><%= log.description %></div>
              <div class="activity-user small">
                <% if log.user %>
                  <i class="fas fa-user me-1"></i> <%= log.user.email %>
                <% end %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div class="text-center py-4">
    <p class="text-muted">No recent activity</p>
  </div>
<% end %>

